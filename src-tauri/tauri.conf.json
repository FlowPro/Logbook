{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Logbuch",
  "version": "1.1.6",
  "identifier": "com.flowpro.logbuch",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Logbuch",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "externalBin": ["binaries/nmea-bridge"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEMjBCRTg4NDU3ODhCQkMKUldTOGkzaEZpTDRnTGVuMUQzQUlpenhidDRIMXduSE1NbkpoK2FqdzdPejBmdEV6QXpiQmZtcFQK",
      "endpoints": [
        "https://github.com/FlowPro/Logbook/releases/latest/download/latest.json"
      ],
      "dialog": false
    }
  }
}
